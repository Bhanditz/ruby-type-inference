#!/usr/bin/env ruby

if ARGV.size < 1
  puts "Usage: arg-scanner <ruby cmdline>\n"
  exit 1
end

old_opts = ENV['RUBYOPT'] || ''
starter = "-r#{File.expand_path(File.dirname(__FILE__))}/../lib/arg_scanner/starter"
unless old_opts.include? starter
  ENV['RUBYOPT'] = starter
  ENV['RUBYOPT'] += " #{old_opts}" if old_opts != ''
end

$0 = ARGV[0]
Kernel.exec *ARGV
